{% extends 'layout.html.twig' %}

{% block title %}Detail du produit
	{{produit.titre}}

{% endblock %}


{% block content %}
<div class="row">
<div class="col-md-8 col-lg-8 col-sm-12">
	<h1>Detail du produit n°{{produit.id}}</h1>
	<h6 class="text-muted"><strong>date d'ajout :</strong>{{produit.dateEnregistrement | date('d/m/Y \à H\\hi') }}</h6>
    <h3><strong>titre: </strong>{{produit.titre}}</h3>
    <h3><strong>couleur: </strong>{{produit.couleur}}</h3>
    <h3><strong>taille: </strong>{{produit.taille}}</h3>
    <h3><strong>prix: </strong>{{produit.prix}}</h3>
    <h3><strong>stock: </strong>{{produit.stock}}</h3>
    <h3><strong>description: </strong>{{produit.description}}</h3>
<img class="img-thumbnail"  src="{{asset('photosProduits/' ~ produit.photo)}}" alt="{{produit.titre}}">


    </div>
    
</div>


<div class="col-md-4 col-lg-4 col-sm-12"></div>

{% endblock %}
